<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:fillViewport="true"
    tools:context="com.example.dell.studentresultmanagement.UserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/euserToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/euserToolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:id="@+id/eresultStatus" />

        <TextView
            android:id="@+id/ename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/eresultStatus"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="Name"
            android:textAlignment="textStart"/>

        <TextView
            android:id="@+id/mname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/ename"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/etotsub"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ename"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textAlignment="textStart"/>

        <EditText
            android:id="@+id/etotmarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/etotsub"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:ems="5"
            android:imeOptions="actionDone"
            android:textAlignment="textEnd"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/esub1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etotmarks"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            />

        <EditText
            android:id="@+id/emarks1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:ems="5"
            android:layout_alignTop="@+id/esub1"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:textAlignment="textEnd"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/esub2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/esub1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            />

        <EditText
            android:id="@+id/emarks2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/esub2"
            android:layout_marginEnd="10dp"
            android:ems="5"
            android:textSize="20sp"
            android:textAlignment="textEnd"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/esub3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/esub2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/emarks3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:ems="5"
            android:layout_alignTop="@+id/esub3"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:textAlignment="textEnd"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/esub4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/esub3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textAlignment="textStart"/>

        <EditText
            android:id="@+id/emarks4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/esub4"
            android:layout_marginEnd="10dp"
            android:ems="5"
            android:textSize="20sp"
            android:textAlignment="textEnd"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/esub5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/esub4"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textAlignment="textStart"/>

        <EditText
            android:id="@+id/emarks5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/esub5"
            android:layout_marginEnd="10dp"
            android:ems="5"
            android:textSize="20sp"
            android:textAlignment="textEnd"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/esub6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/esub5"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textAlignment="textStart"/>

        <EditText
            android:id="@+id/emarks6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/esub6"
            android:layout_marginEnd="10dp"
            android:ems="5"
            android:textSize="20sp"
            android:textAlignment="textEnd"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/esubTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/esub6"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textAlignment="textStart"/>
        <TextView
            android:id="@+id/emarksTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/esubTotal"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:textAlignment="textEnd"/>

        <TextView
            android:id="@+id/esubPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/emarksTotal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textAlignment="textStart"/>
        <TextView
            android:id="@+id/emarksPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/esubPercent"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:textAlignment="textEnd"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Details"
            android:id="@+id/eSave"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="16sp"
            android:layout_below="@+id/emarksPercent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:onClick="saveUser"
            android:textColor="#FFF"
            android:background="@drawable/custom_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/merrorText"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/eSave" />

        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept Request"
            android:id="@+id/acceptRequest"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="14sp"
            android:layout_below="@+id/euserToolbar"
            android:layout_marginTop="150dp"
            android:layout_marginStart="20dp"
            android:textColor="#FFF"
            android:onClick="acceptRequest"
            android:background="@drawable/custom_button"/>

        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reject Request"
            android:id="@+id/rejectRequest"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="14sp"
            android:layout_below="@+id/euserToolbar"
            android:layout_marginEnd="20dp"
            android:textColor="#FFF"
            android:onClick="rejectRequest"
            android:layout_alignTop="@+id/acceptRequest"
            android:layout_alignParentEnd="true"
            android:background="@drawable/custom_button"/>

    </RelativeLayout>
</ScrollView>